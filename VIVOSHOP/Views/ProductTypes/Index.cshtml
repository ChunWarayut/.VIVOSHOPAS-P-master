@model IEnumerable<VIVOSHOP.Models.ProductType>

@{
    ViewBag.Title = "Index";
}
@{
    if (Session["User_Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<div class="row">
    <div class="col-md-8">
        <h2>ระบบจัดการข้อมูลประเภทสินค้า</h2>
        <p>
            @Html.ActionLink("เพิ่มข้อมูล", "Create")
        </p>
    </div>
    <div class="col-md-4">
        <br />
        <form method="get" action="/ProductTypes/Index">
            <div class="row">
                <div class="col-lg-10">
                    <input class="form-control" type="text" name="keyword" placeholder="Search" aria-label="Search">
                </div>
                <button type="submit" class="btn btn-light">ค้นหา</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProType_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProType_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProType_Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProType_Name)
    </td>
    <td>
        @Html.ActionLink("แก้ไข", "Edit", new { id = item.ProType_Id }) |
        @Html.ActionLink("ลบ", "Delete", new { id = item.ProType_Id })
    </td>
</tr>
    }

</table>
