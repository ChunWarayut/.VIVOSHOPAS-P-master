@model IEnumerable<VIVOSHOP.Models.ProductOrder>

@{
    ViewBag.Title = "Index";
}
@{
    if (Session["User_Id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<h2>ระบบจัดการข้อมูลการชำระเงิน</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Parcel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserAccout.User_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_img)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Parcel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccout.User_Name)
            </td>

            <td>

                <img src="~/image/@Html.DisplayFor(modelItem => item.Order_img)"
                     alt="Order_img"
                     height="50px"
                     asp-append-version="true" />
            </td>

            <td>

                @*@{
                    if (Session["User_Id"] != null && Session["User_Id"].ToString() != "50001")
                    {
                        Html.ActionLink("แก้ไข", "Edit", new { id = item.Order_Id });
                    }
                    else
                    {
                        Html.ActionLink("แก้ไข", "Edits", new { id = item.Order_Id });
                    }
                }*@

                @Html.ActionLink("แก้ไข", "Edits", new { id = item.Order_Id })|
                @if (@item.Order_Status == "ชำระแล้ว" || @item.Order_Status == "จัดส่งแล้ว")
                {<a>
                        @Html.ActionLink("พิมพ์ใบเสร็จ", "Details", new { id = item.Order_Id }) |
                    </a>
                }
                @Html.ActionLink("ลบ", "Delete", new { id = item.Order_Id })
            </td>
        </tr>
    }

</table>
